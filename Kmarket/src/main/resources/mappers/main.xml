<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.kmarket.dao.MainDao">

	<!-- DB컬럼명과 Vo멤버변수 매칭(맵핑) -->
	<resultMap id="categoriesMap" type="kr.co.kmarket.vo.CategoriesVo">
		<result property="code1" column="code1"/>
		<result property="title" column="tit1"/>
		<collection property="cate2List" ofType="kr.co.kmarket.vo.Cate2Vo">
			<result property="code1" column="code1"/>
			<result property="code2" column="code2"/>
			<result property="title" column="tit2"/>
		</collection>
	</resultMap>

	<!-- resultType 대신 resultMap에 맵핑 된 id값 넣으면 됨 -->
	<select id="selectCategories" resultMap="categoriesMap">
		SELECT 
			c2.code1,
			c2.code2, 
			c1.title AS tit1, 
			c2.title AS tit2
		FROM `km_cate1` AS c1
		JOIN `km_cate2` AS c2
		ON c1.code1 = c2.code1
		ORDER BY c2.code1, c2.code2;
	</select>
	
	<select id="selectHitProduct" resultType="kr.co.kmarket.vo.ProductVo">
		SELECT * FROM `km_product` ORDER BY `hit` DESC LIMIT 8;
	</select>	
	
	<select id="selectScoreProduct" resultType="kr.co.kmarket.vo.ProductVo">
		SELECT * FROM `km_product` ORDER BY `score`, `rdate` DESC LIMIT 8;
	</select>
	
	<select id="selectRdateProduct" resultType="kr.co.kmarket.vo.ProductVo">
		SELECT * FROM `km_product` ORDER BY `rdate` DESC LIMIT 8;
	</select>
		
	<select id="selectDiscountProduct" resultType="kr.co.kmarket.vo.ProductVo">
		SELECT * FROM `km_product` ORDER BY `discount` DESC LIMIT 8;
	</select>
	
</mapper>
